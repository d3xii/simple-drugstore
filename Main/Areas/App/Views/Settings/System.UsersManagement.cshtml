@using SDM.Main.Helpers.Extensions.CustomHtmlHelper.Button
@inherits WebViewPage<ICollection<SDM.Domain.Models.AccountModel>>, ILocalizable<SDM.Domain.Models.AccountModel.Texts>
@(Html.Custom()
.Grid(t => t)
.PropertyColumn(this.Localize(t => t.UserName), this.Localize(t => t.UserName), t => t.UserName)
.PropertyColumn(this.Localize(t => t.IsAdmin), this.Localize(t => t.IsAdmin), t => t.IsAdmin)
.PropertyColumn(this.Localize(t => t.IsEnabled), this.Localize(t => t.IsEnabled), t => t.IsEnabled)
.DynamicColumn(null, null, t => Html.Custom()
    .Button(this.Localize(t2 => t2.Shared.Edit))
    .Action("EditAccount", routeValues: new { id = t.ID })
    +
    Html.Custom()
    .Button(this.Localize(t2 => t2.Shared.Delete))
    .AsType(RenderInfo.ButtonType.Post)
    .Action("DeleteAccount", routeValues: new { id = t.ID })
    .HasConfirmation(string.Format(this.Localize(t2 => t2.Shared.AreYouSure))))
.AddButton(this.Localize(t => t.Shared.Add), "AddAccount"))