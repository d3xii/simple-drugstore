@using System.Web.Mvc.Html
@using SDM.Localization.Core
@inherits System.Web.Mvc.WebViewPage<SDM.Main.Helpers.Extensions.CustomHtmlHelper.DataGrid.RenderInfo>, ILocalizable<SDM.Core.Localization.NoTexts>
@{
    string gridName = Model.Name;
    string gridTableName = string.Format("{0}_table", gridName);
}
<div id="@gridName" style="border: 1px dotted black;">
    <div>
        @foreach(var button in Model.Buttons)
        {
            @Html.ActionLink(button.DisplayText, button.ActionName, button.ControllerName)
        }
    </div>    
    <table id="@gridTableName">
        <thead>
            <tr>
                @foreach (var column in this.Model.Columns)
                {
                    <th id="@Html.Encode(column.Name)">@Html.Encode(column.DisplayText)
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in this.Model.DataSource)
            {
                <tr>
                    @foreach (var column in this.Model.Columns)
                    {
                        <td>@Html.Encode(column.PropertyValueSelector(row))
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    // render grid
    grid.render("@gridTableName", "@Model.Width", "@Model.Height");
</script>
