@* ReSharper disable RedundantNameQualifier *@
@inherits System.Web.Mvc.WebViewPage<MvcControls.Controls.DataGrid.DataGridInlineFormEditModule>
@* ReSharper restore RedundantNameQualifier *@
<div id="@(Model.GridManagerVariableName)_PendingChanges" style="display: none;">
</div>
<div id="@(Model.GridManagerVariableName)_NewRowButtons" style="display: none;">
    <div style="text-align: center;">
        <button type="button" onclick="@(Model.GridManagerVariableName).OnNewRowSaveButtonClicked(this)">@Model.SaveButtonText</button>
        <button type="button" onclick="@(Model.GridManagerVariableName).OnNewRowSaveNewButtonClicked(this, true)">@Model.SaveNewButtonText</button>
        <button type="button" onclick="@(Model.GridManagerVariableName).OnNewRowCancelButtonClicked(this)">@Model.CancelButtonText</button>
    </div>
</div>
<script type="text/javascript">
    // define global variable
    function grid_Initialize()
    {
        // create new instance
        var grid = new window.Grid();
        
        // initialize code below
        grid.DataSourceName = "@Model.RenderInfo.DataSourcePropertyName";
        grid.GridName = "@Model.GridManagerVariableName";
        grid.NewRowContentUrl = "@Model.NewLineContentUrl.ToUrl(Url)";
        
        // return result
        return grid;
    }    
    
    // execute script
    var @(Model.GridManagerVariableName) = grid_Initialize();
</script>
